{
  "name": "fleet-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Root manifest for the Fleet monorepo. Provides shared tooling without impacting app builds.",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "acceptance": "npm --prefix tests/acceptance run acceptance",
    "mock": "npm --prefix apps/api-mock run mock",
    "mock:build": "npm --prefix apps/api-mock run build",
    "test:smoke": "node scripts/smoke-proxy.mjs",
    "test:modules": "node scripts/module-smoke.mjs",
    "test:sse": "node scripts/sse-smoke.mjs",
    "openapi:lint": "spectral lint apps/api/openapi.yaml",
    "openapi:generate": "openapi --input apps/api/openapi.yaml --output apps/ui/src/lib/api/gen --client fetch --useUnionTypes --indent 2"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "6.15.0",
    "@stoplight/spectral-rulesets": "1.22.0",
    "openapi-typescript-codegen": "0.23.0",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.4.0"
  }
}
