[Unit]
Description=Fleet role convergence agent
After=network-online.target docker.service
Wants=network-online.target

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/fleet
Environment=SOPS_AGE_KEY_FILE=/etc/fleet/age.key
ExecStart=/opt/fleet/agent/role-agent.sh
SuccessExitStatus=0
TimeoutStartSec=900
StandardOutput=journal
StandardError=inherit

[Install]
WantedBy=multi-user.target
