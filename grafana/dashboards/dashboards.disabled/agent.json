{
  "id": null,
  "uid": "agent-convergence",
  "title": "Agent Convergence",
  "tags": ["fleet", "agent"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-12h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Convergence Duration (s)",
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "role_agent_last_run_duration_seconds",
          "legendFormat": "{{host}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "table",
      "title": "Last Run Timestamp & Commit",
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "max(role_agent_last_run_timestamp) by (host, commit)",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "color": { "mode": "fixed" },
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              { "id": "unit", "value": "s" },
              { "id": "custom.cellOptions", "value": { "type": "auto" } }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "footer": {
          "countRows": false,
          "show": false
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "Last Run Epoch",
              "commit": "Commit",
              "host": "Host"
            }
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "table",
      "title": "Error Codes by Host (6h)",
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (host, errorCode) (count_over_time({service=\"role-agent\", level=\"error\", errorCode!=\"\"}[6h]))",
          "legendFormat": "",
          "queryType": "range"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "unit": "none",
          "custom": {
            "align": "auto",
            "displayMode": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "footer": { "countRows": false, "show": false }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "Count",
              "errorCode": "Error Code",
              "host": "Host"
            }
          }
        }
      ]
    }
  ]
}
