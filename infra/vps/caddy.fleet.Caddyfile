app.headspamartina.hr {
  encode zstd gzip

  handle_path /api/* {
    reverse_proxy fleet-api:3015
  }
  handle /stream {
    reverse_proxy fleet-api:3015 {
      header_up Authorization {>Authorization}
      flush_interval -1
    }
  }
  handle /metrics {
    reverse_proxy fleet-api:3015 {
      header_up Authorization {>Authorization}
    }
  }

  # UI (everything else) - PRODUCTION UI
  handle {
    reverse_proxy fleet-ui:3000
  }
}
